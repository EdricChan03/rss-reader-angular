{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://edricchan03.github.io/rss-reader/schemas/release-notes-schema.json",
  "title": "Release notes JSON schema",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "latestVersion": {
      "$ref": "#/definitions/version",
      "description": "The latest version of the app."
    },
    "gitRepo": {
      "$ref": "#/definitions/gitRepo",
      "description": "A link to the Git (GitHub/Gitlab) repository."
    },
    "releases": {
      "$ref": "#/definitions/releases",
      "description": "A list of all releases."
    }
  },
  "required": [
    "latestVersion",
    "releases"
  ],
  "definitions": {
    "version": {
      "type": "string",
      "pattern": "^(.[0-9]*){2,3}$"
    },
    "gitRepo": {
      "oneOf": [
        {
          "$ref": "#/definitions/gitRepoMetadata"
        },
        {
          "type": "string",
          "format": "uri",
          "description": "A link to the Git repository."
        }
      ]
    },
    "gitRepoMetadata": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "description": "The username that owns the repository."
        },
        "repo": {
          "type": "string",
          "description": "The name of the repository."
        },
        "host": {
          "type": "string",
          "format": "uri",
          "description": "The host of the repository. (The host's address should be used)",
          "default": "https://github.com"
        }
      },
      "required": [
        "username",
        "repo",
        "host"
      ]
    },
    "releases": {
      "type": "object",
      "patternProperties": {
        "^(.[0-9]*){2,3}$": {
          "$ref": "#/definitions/release"
        }
      }
    },
    "release": {
      "type": "object",
      "properties": {
        "releaseName": {
          "description": "A unique release name.",
          "type": "string"
        },
        "releaseNotes": {
          "description": "Release notes for the specified version. (Allows for an external URI to be specified)",
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "string",
              "format": "uri"
            }
          ]
        },
        "releaseDate": {
          "description": "The date the release was released at.",
          "oneOf": [
            {
              "type": "integer",
              "$comment": "Milliseconds since the Unix epoch."
            },
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string"
            }
          ]
        },
        "releaseAuthor": {
          "description": "The author of the person who released the release.",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "string",
              "format": "uri"
            }
          ]
        },
        "releaseCommitSha": {
          "description": "The Git commit SHA of the release.",
          "type": "string",
          "minLength": 7,
          "maxLength": 40
        },
        "releaseStatus": {
          "description": "The status of the release.",
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/releaseStatusTypes"
              }
            },
            {
              "$ref": "#/definitions/releaseStatusTypes",
              "default": "draft"
            }
          ]
        },
        "releaseComments": {
          "description": "Internal comments about the release. (Can be a URL)",
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "string",
              "format": "uri"
            },
            {
              "type": "string"
            }
          ]
        }
      },
      "required": [
        "releaseNotes"
      ]
    },
    "releaseStatusTypes": {
      "type": "string",
      "enum": [
        "draft",
        "wip",
        "deprecated",
        "released",
        "unreleased",
        "other"
      ]
    }
  }
}
